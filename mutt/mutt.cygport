NAME="mutt"
VERSION=2.0.6
RELEASE=1

CATEGORY="Mail"
DESCRIPTION="A text mode mail user agent (MUA)"
SUMMARY="A text mode mail user agent (MUA)"

HOMEPAGE="http://www.mutt.org"
SRC_URI="ftp://ftp.mutt.org/pub/mutt/${PN}-${PV}.tar.gz 
ftp://ftp.mutt.org/pub/mutt/${PN}-${PV}.tar.gz.asc" 
SRC_DIR="${PN}-${PV}"

PATCH_URI="mutt-postinstall.patch
mutt-nogroup.patch
mutt-cabundle.patch"

PKG_NAMES="mutt"

CONTENTS='etc usr'

DIFF_EXCLUDES="Makefile"
KEEP_LA_FILES="none"

src_compile() {
	cd ${S}
	cygautoreconf 
	cd ${B}
	export ac_cv_func_mmap_fixed_mapped=yes
	cygconf -C \
	--with-mailpath=/var/spool/mail \
	--disable-dependency-tracking \
	--docdir=/usr/share/doc/mutt \
	--enable-fcntl \
	--enable-hcache \
	--enable-iconv \
	--enable-sidebar \
	--enable-imap \
	--enable-locales-fix \
	--enable-pop \
	--with-ssl \
	--enable-smtp \
	--enable-gpgme \
	--with-gss \
	--with-sasl \
	--with-slang \
	MUTT_MD5=mutt_md5
	cygmake 
}

src_test() {
	cd ${B}
	cygmake -i check
}

src_install() {
	cd ${B}
	cyginstall 
	cd ${D}/etc
	mkdir -p defaults/etc
	mv -v Muttrc defaults/etc
	mv -v mime.types defaults/etc
}
